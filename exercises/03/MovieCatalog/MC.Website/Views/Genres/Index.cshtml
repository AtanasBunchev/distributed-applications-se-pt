@model IEnumerable<MC.Website.ViewModels.GenreVM>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (!Model.Any())
{
    <span class="alert-info">No genre object</span>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <td>#</td>
                <td>Name</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                </tr>
            }
        </tbody>
    </table>
}