@model IEnumerable<MC.Website.MoviesServiceReference.MovieDto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (!Model.Any())
{
    <span class="alert-info">No movie object</span>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <td>#</td>
                <td>Title</td>
                <td>Country</td>
                <td>Genre</td>
                <td>Director</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Country</td>
                    <td>@item.Genre.Name</td>
                    <td>@item.Director.FirstName @item.Director.LastName</td>
                </tr>
            }
        </tbody>
    </table>
}